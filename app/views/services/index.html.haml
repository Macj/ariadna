%h1 Услуги
- if user_signed_in?
  = link_to 'Новая услуга', new_service_path, :class => " button dark_grey"

.services
  - @services.each do |service|
    .service
      .service_img.mar_20 
        %a{:href => service_path(service)}
          %img{ :src => service.photo(:thumb)}
      .service_name.mar_20 
        %a{:href => service_path(service)}
          = service.title
      - if user_signed_in?
        .buttons
          = link_to 'Редактировать', edit_service_path(service), :class => " button dark_grey"
          = link_to 'Удалить', service, :method => :delete, :data => { :confirm => 'Вы уверены?' }, :class => "button dsgnmoo"
      .service_desc.mar_20 
        = strip_tags(service.description)[0..150] 
        %a{:href => service_path(service)}
          = "..."