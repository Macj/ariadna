= form_for @master, :html => { :multipart => true } do |f|
  - if @master.errors.any?
    #error_explanation
      %h2= "#{pluralize(@master.errors.count, "error")} prohibited this master from being saved:"
      %ul
        - @master.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "ФИО"
    = f.text_field :fio
  .field
    = f.label "Заслуги"
    = f.text_field :deserts
  .field
    = f.label "Фото"
    = f.file_field :photo
  .actions
    = f.submit 'Сохранить'
