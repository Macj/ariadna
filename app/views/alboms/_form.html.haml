= form_for @albom do |f|
  - if @albom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@albom.errors.count, "error")} prohibited this albom from being saved:"
      %ul
        - @albom.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Название"
    = f.text_field :title
  .field
    = f.label "Дата создания"
    = f.datetime_select :when
  .actions
    = f.submit 'Сохранить'
