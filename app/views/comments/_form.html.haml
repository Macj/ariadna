= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "ФИО или ник"
    = f.text_field :fio
  .field
    = f.label "Курс"
    = f.select :service_id, @services.map{|e| [e.title, e.id]}, :include_blank => true
  .field
    = f.label "Сообщение"
    = f.text_area :body
  .actions
    = f.submit 'Сохранить'
